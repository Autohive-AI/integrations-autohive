{
    "name": "ShopifyAdmin",
    "display_name": "Shopify Admin API",
    "version": "1.0.0",
    "description": "Shopify Admin API integration for store management - customers, orders, products, inventory, locations, fulfillments, and draft orders",
    "entry_point": "shopify_admin.py",
    "auth": {
        "type": "platform",
        "provider": "Shopify",
        "scopes": [
            "read_customers",
            "write_customers",
            "read_orders",
            "write_orders",
            "read_products",
            "write_products",
            "read_inventory",
            "write_inventory",
            "read_locations",
            "read_fulfillments",
            "write_fulfillments",
            "read_draft_orders",
            "write_draft_orders"
        ]
    },
    "actions": {
        "list_customers": {
            "display_name": "List Customers",
            "description": "Retrieve a list of customers with optional filtering and pagination",
            "input_schema": {
                "type": "object",
                "properties": {
                    "limit": {"type": "integer", "description": "Maximum customers to return (max 250)", "label": "Limit", "default": 50},
                    "since_id": {"type": "string", "description": "Restrict results to after this ID", "label": "Since ID"},
                    "created_at_min": {"type": "string", "description": "Show customers created after date (ISO 8601)", "label": "Created After"},
                    "created_at_max": {"type": "string", "description": "Show customers created before date (ISO 8601)", "label": "Created Before"},
                    "updated_at_min": {"type": "string", "description": "Show customers updated after date (ISO 8601)", "label": "Updated After"},
                    "updated_at_max": {"type": "string", "description": "Show customers updated before date (ISO 8601)", "label": "Updated Before"}
                },
                "required": []
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "success": {"type": "boolean"},
                    "customers": {"type": "array"},
                    "count": {"type": "integer"},
                    "message": {"type": "string"}
                },
                "required": ["success"]
            }
        },
        "get_customer": {
            "display_name": "Get Customer",
            "description": "Retrieve a single customer by ID",
            "input_schema": {
                "type": "object",
                "properties": {
                    "customer_id": {"type": "string", "description": "Customer ID", "label": "Customer ID"}
                },
                "required": ["customer_id"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "success": {"type": "boolean"},
                    "customer": {"type": "object"},
                    "message": {"type": "string"}
                },
                "required": ["success"]
            }
        },
        "search_customers": {
            "display_name": "Search Customers",
            "description": "Search customers by query string",
            "input_schema": {
                "type": "object",
                "properties": {
                    "query": {"type": "string", "description": "Search query", "label": "Query"},
                    "limit": {"type": "integer", "description": "Maximum results", "label": "Limit", "default": 50}
                },
                "required": ["query"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "success": {"type": "boolean"},
                    "customers": {"type": "array"},
                    "count": {"type": "integer"},
                    "message": {"type": "string"}
                },
                "required": ["success"]
            }
        },
        "create_customer": {
            "display_name": "Create Customer",
            "description": "Create a new customer",
            "input_schema": {
                "type": "object",
                "properties": {
                    "email": {"type": "string", "format": "email", "description": "Email address", "label": "Email"},
                    "first_name": {"type": "string", "description": "First name", "label": "First Name"},
                    "last_name": {"type": "string", "description": "Last name", "label": "Last Name"},
                    "phone": {"type": "string", "description": "Phone number", "label": "Phone"},
                    "verified_email": {"type": "boolean", "description": "Email verified", "label": "Verified", "default": true},
                    "send_email_welcome": {"type": "boolean", "description": "Send welcome email", "label": "Welcome Email", "default": false},
                    "tags": {"type": "string", "description": "Comma-separated tags", "label": "Tags"},
                    "note": {"type": "string", "description": "Note about customer", "label": "Note"},
                    "tax_exempt": {"type": "boolean", "description": "Tax exempt", "label": "Tax Exempt", "default": false},
                    "address": {"type": "object", "description": "Customer address", "label": "Address"}
                },
                "required": []
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "success": {"type": "boolean"},
                    "customer": {"type": "object"},
                    "message": {"type": "string"}
                },
                "required": ["success"]
            }
        },
        "update_customer": {
            "display_name": "Update Customer",
            "description": "Update an existing customer",
            "input_schema": {
                "type": "object",
                "properties": {
                    "customer_id": {"type": "string", "description": "Customer ID", "label": "Customer ID"},
                    "email": {"type": "string", "format": "email", "description": "Email", "label": "Email"},
                    "first_name": {"type": "string", "description": "First name", "label": "First Name"},
                    "last_name": {"type": "string", "description": "Last name", "label": "Last Name"},
                    "phone": {"type": "string", "description": "Phone", "label": "Phone"},
                    "tags": {"type": "string", "description": "Tags", "label": "Tags"},
                    "note": {"type": "string", "description": "Note", "label": "Note"},
                    "tax_exempt": {"type": "boolean", "description": "Tax exempt", "label": "Tax Exempt"}
                },
                "required": ["customer_id"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "success": {"type": "boolean"},
                    "customer": {"type": "object"},
                    "message": {"type": "string"}
                },
                "required": ["success"]
            }
        },
        "list_orders": {
            "display_name": "List Orders",
            "description": "Retrieve orders with optional filtering",
            "input_schema": {
                "type": "object",
                "properties": {
                    "limit": {"type": "integer", "description": "Maximum orders", "label": "Limit", "default": 50},
                    "status": {"type": "string", "description": "Order status", "label": "Status", "enum": ["open", "closed", "cancelled", "any"], "default": "any"},
                    "financial_status": {"type": "string", "description": "Financial status", "label": "Financial Status", "enum": ["authorized", "pending", "paid", "partially_paid", "refunded", "voided", "partially_refunded", "any"]},
                    "fulfillment_status": {"type": "string", "description": "Fulfillment status", "label": "Fulfillment Status", "enum": ["shipped", "partial", "unshipped", "unfulfilled", "any"]},
                    "since_id": {"type": "string", "description": "After this ID", "label": "Since ID"},
                    "created_at_min": {"type": "string", "description": "Created after", "label": "Created After"},
                    "created_at_max": {"type": "string", "description": "Created before", "label": "Created Before"}
                },
                "required": []
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "success": {"type": "boolean"},
                    "orders": {"type": "array"},
                    "count": {"type": "integer"},
                    "message": {"type": "string"}
                },
                "required": ["success"]
            }
        },
        "get_order": {
            "display_name": "Get Order",
            "description": "Retrieve a single order by ID",
            "input_schema": {
                "type": "object",
                "properties": {
                    "order_id": {"type": "string", "description": "Order ID", "label": "Order ID"}
