                },
                "required": ["success"]
            }
        },
        "create_order": {
            "display_name": "Create Order",
            "description": "Create a new order",
            "input_schema": {
                "type": "object",
                "properties": {
                    "line_items": {"type": "array", "description": "Order line items", "label": "Line Items"},
                    "customer_id": {"type": "string", "description": "Customer ID", "label": "Customer ID"},
                    "email": {"type": "string", "format": "email", "description": "Customer email", "label": "Email"},
                    "financial_status": {"type": "string", "description": "Financial status", "label": "Financial Status", "enum": ["pending", "authorized", "partially_paid", "paid"], "default": "pending"},
                    "send_receipt": {"type": "boolean", "description": "Send receipt", "label": "Send Receipt", "default": false},
                    "note": {"type": "string", "description": "Order note", "label": "Note"},
                    "tags": {"type": "string", "description": "Tags", "label": "Tags"},
                    "shipping_address": {"type": "object", "description": "Shipping address", "label": "Shipping Address"},
                    "billing_address": {"type": "object", "description": "Billing address", "label": "Billing Address"}
                },
                "required": ["line_items"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "success": {"type": "boolean"},
                    "order": {"type": "object"},
                    "message": {"type": "string"}
                },
                "required": ["success"]
            }
        },
        "cancel_order": {
            "display_name": "Cancel Order",
            "description": "Cancel an existing order",
            "input_schema": {
                "type": "object",
                "properties": {
                    "order_id": {"type": "string", "description": "Order ID", "label": "Order ID"},
                    "reason": {"type": "string", "description": "Cancel reason", "label": "Reason", "enum": ["customer", "fraud", "inventory", "declined", "other"]},
                    "email": {"type": "boolean", "description": "Send email", "label": "Send Email", "default": true},
                    "restock": {"type": "boolean", "description": "Restock items", "label": "Restock", "default": true}
                },
                "required": ["order_id"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "success": {"type": "boolean"},
                    "order": {"type": "object"},
                    "message": {"type": "string"}
                },
                "required": ["success"]
            }
        },
