      "display_name": "Create Campaign",
      "description": "Create a new email campaign in Mailchimp",
      "input_schema": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Campaign type: 'regular', 'plaintext', 'absplit', 'rss', or 'variate'"
          },
          "list_id": {
            "type": "string",
            "description": "List ID to send the campaign to"
          },
          "subject_line": {
            "type": "string",
            "description": "Campaign subject line"
          },
          "from_name": {
            "type": "string",
            "description": "From name for the campaign"
          },
          "reply_to": {
            "type": "string",
            "description": "Reply-to email address"
          },
          "title": {
            "type": "string",
            "description": "Campaign title (internal use)"
          }
        },
        "required": [
          "type",
          "list_id",
          "subject_line",
          "from_name",
          "reply_to"
        ]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "campaign": {
            "type": "object",
            "description": "Created campaign details",
            "properties": {
              "id": {
                "type": "string",
                "description": "Campaign ID"
              },
              "type": {
                "type": "string",
                "description": "Campaign type"
              },
              "status": {
                "type": "string",
