              }
            }
          },
          "result": {
            "type": "boolean",
            "description": "Whether the operation was successful"
          },
          "error": {
            "type": "string",
            "description": "Error message if the action failed"
          }
        },
        "required": [
          "result"
        ]
      }
    },
    "get_campaign": {
      "display_name": "Get Campaign",
      "description": "Get details of a specific campaign",
      "input_schema": {
        "type": "object",
        "properties": {
          "campaign_id": {
            "type": "string",
            "description": "Mailchimp campaign ID"
          }
        },
        "required": [
          "campaign_id"
        ]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "campaign": {
            "type": "object",
