            "output_schema": {
                "type": "object",
                "properties": {
                    "task": {
                        "type": "object",
                        "description": "Updated task details"
                    },
                    "result": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if the action failed"
                    }
                },
                "required": ["task", "result"]
