{
    "name": "ClickUp",
    "display_name": "ClickUp",
    "version": "1.0.0",
    "description": "ClickUp integration for managing tasks, lists, folders, spaces, and team collaboration",
    "entry_point": "clickup.py",
    "auth": {
        "type": "platform",
        "provider": "ClickUp",
        "scopes": []
    },
    "actions": {
        "create_task": {
            "display_name": "Create Task",
            "description": "Creates a new task in a list.",
            "input_schema": {
                "type": "object",
                "properties": {
                    "list_id": {
                        "type": "string",
                        "description": "The ID of the list to create the task in"
                    },
                    "name": {
                        "type": "string",
                        "description": "The task's name or title"
                    },
                    "description": {
                        "type": "string",
                        "description": "Task description (supports markdown)"
                    },
                    "assignees": {
                        "type": "array",
                        "description": "Array of user IDs to assign to the task",
                        "items": {
                            "type": "integer"
                        }
                    },
                    "status": {
                        "type": "string",
                        "description": "Status name (e.g., 'Open', 'In Progress', 'Complete')"
                    },
                    "priority": {
                        "type": "integer",
                        "description": "Priority level: 1 (Urgent), 2 (High), 3 (Normal), 4 (Low)"
                    },
                    "due_date": {
                        "type": "integer",
                        "description": "Due date in Unix timestamp milliseconds"
                    },
                    "due_date_time": {
                        "type": "boolean",
                        "description": "Whether the due date includes time"
                    },
                    "start_date": {
                        "type": "integer",
                        "description": "Start date in Unix timestamp milliseconds"
                    },
                    "tags": {
                        "type": "array",
                        "description": "Array of tag names",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["list_id", "name"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "task": {
                        "type": "object",
                        "description": "Created task details"
                    },
                    "result": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if the action failed"
                    }
                },
                "required": ["task", "result"]
            }
        },
        "get_task": {
            "display_name": "Get Task",
            "description": "Retrieves details of a specific task by its ID.",
            "input_schema": {
                "type": "object",
                "properties": {
                    "task_id": {
                        "type": "string",
                        "description": "The ID of the task to retrieve"
                    },
                    "include_subtasks": {
                        "type": "boolean",
                        "description": "Include subtasks in the response"
                    }
                },
                "required": ["task_id"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "task": {
                        "type": "object",
                        "description": "Task details"
                    },
                    "result": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if the action failed"
                    }
                },
                "required": ["task", "result"]
            }
        },
        "update_task": {
            "display_name": "Update Task",
