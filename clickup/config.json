                    },
                    "description": {
                        "type": "string",
                        "description": "Updated task description"
                    },
                    "status": {
                        "type": "string",
                        "description": "Updated status name"
                    },
                    "priority": {
                        "type": "integer",
                        "description": "Updated priority level (1-4)"
                    },
                    "assignees": {
                        "type": "object",
                        "description": "Assignee operations",
