        "delete_comment": {
            "display_name": "Delete Comment",
            "description": "Delete a comment (owner only). Quota cost: 50 units",
            "input_schema": {
                "type": "object",
                "properties": {
                    "comment_id": {
                        "type": "string",
                        "description": "Comment ID to delete"
                    }
                },
                "required": ["comment_id"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "result": {
                        "type": "boolean",
                        "description": "Success status"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if failed"
                    }
                },
                "required": ["result"]
            }
        },
        "moderate_comment": {
            "display_name": "Moderate Comment",
            "description": "Set comment moderation status (channel owner only). Quota cost: 50 units",
            "input_schema": {
                "type": "object",
                "properties": {
                    "comment_id": {
                        "type": "string",
                        "description": "Comment ID"
                    },
                    "moderation_status": {
                        "type": "string",
                        "description": "Moderation status",
                        "enum": ["published", "heldForReview", "rejected"]
                    },
                    "ban_author": {
                        "type": "boolean",
                        "description": "Whether to ban the comment author from the channel"
                    }
                },
                "required": ["comment_id", "moderation_status"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "result": {
                        "type": "boolean",
                        "description": "Success status"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if failed"
                    }
                },
                "required": ["result"]
            }
        }
    }
}
