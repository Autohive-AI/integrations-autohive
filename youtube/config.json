            "output_schema": {
                "type": "object",
                "properties": {
                    "replies": {
                        "type": "array",
                        "description": "List of reply comments"
                    },
                    "next_page_token": {
                        "type": "string",
                        "description": "Token for next page"
                    },
                    "result": {
                        "type": "boolean",
                        "description": "Success status"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if failed"
