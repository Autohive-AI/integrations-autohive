                "type": "object",
                "properties": {
                    "parent_comment_id": {
                        "type": "string",
                        "description": "Parent comment ID"
                    },
                    "max_results": {
                        "type": "integer",
                        "description": "Maximum results (1-100, default 20)"
                    },
                    "page_token": {
                        "type": "string",
                        "description": "Pagination token"
                    }
                },
                "required": ["parent_comment_id"]
