        "create_heartbeat_comment": {
            "display_name": "Create Comment",
            "description": "Create a new comment on a thread in the Heartbeat community",
            "input_schema": {
                "type": "object",
                "properties": {
                    "thread_id": {
                        "type": "string",
                        "description": "The ID of the thread to comment on"
                    },
                    "content": {
                        "type": "string",
                        "description": "The text content of the comment (supports Rich Text formatting)"
                    },
                    "parent_id": {
                        "type": "string",
                        "description": "The ID of the parent comment if this is a reply. Must be a direct reply to the thread, not a nested reply (optional)"
                    },
                    "user_id": {
                        "type": "string",
                        "description": "The ID of the admin user to create the comment as. Only admin users can be chosen. If not provided, will use the API key owner (optional)"
                    }
                },
                "required": ["thread_id", "content"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "comment": {
                        "type": "object",
                        "description": "Created comment details",
                        "properties": {
                            "id": {
                                "type": "string",
