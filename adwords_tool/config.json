{
    "name": "Google Ads",
    "version": "1.0.0",
    "description": "Fetches campaign data from Google AdWords API.",
    "entry_point": "adwords.py",
    "auth": {
        "type": "platform",
        "provider": "Google Ads",
        "scopes": [
            "https://www.googleapis.com/auth/adwords"
        ]
    },
    "actions": {
        "get_campaign_data": {
            "display_name": "Get Campaign Data",
            "description": "Retrieves Google Ads campaign data for specified customer ID and date ranges.",
            "input_schema": {
                "type": "object",
                "properties": {
                    "login_customer_id": {
                        "type": "string",
                        "description": "Your Google Ads Manager Account ID (MCC) without dashes (e.g., '1234567890'). This is the account that has administrative access to the customer account being queried."
                    },
                    "customer_id": {
                        "type": "string",
                        "description": "The Google Ads Customer ID of the specific account you want to query data from (e.g., '1234567890'). This is the account whose campaign data will be retrieved."
                    },
                    "date_ranges": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "List of date ranges. Supported formats: 'last_7_days', 'prev_7_days', or 'YYYY-MM-DD_YYYY-MM-DD' (e.g., [\"last_7_days\", \"2023-01-01_2023-01-31\"]). Defaults to [\"last_7_days\", \"prev_7_days\"]."
                    }
                },
                "required": [
                    "login_customer_id",
                    "customer_id"
                ]
            },
            "output_schema": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "date_range": {
                            "type": "string",
                            "description": "The date range this data represents"
                        },
                        "data": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": true,
                                "properties": {}
                            },
                            "description": "Campaign data for the specified date range"
                        }
                    }
                }
            }
        },
        "get_ad_group_ad_data": {
            "display_name": "Get Ad Group and Ad Data",
            "description": "Retrieves detailed ad group and ad-level data, including performance metrics and content.",
            "input_schema": {
                "type": "object",
                "properties": {
                    "login_customer_id": {
                        "type": "string",
                        "description": "Your Google Ads Manager Account ID (MCC) without dashes."
                    },
                    "customer_id": {
                        "type": "string",
                        "description": "The Google Ads Customer ID of the specific account."
                    },
                    "date_ranges": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "List of date ranges (e.g., [\"YYYY-MM-DD_YYYY-MM-DD\"])."
                    },
                    "campaign_ids": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Optional. Filter by specific campaign IDs."
                    },
                    "ad_group_ids": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Optional. Filter by specific ad group IDs."
                    }
                },
                "required": [
                    "login_customer_id",
                    "customer_id",
                    "date_ranges"
                ]
            },
            "output_schema": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "date_range": {
                            "type": "string",
                            "description": "The date range this data represents."
                        },
                        "data": {
                            "type": "array",
                            "description": "Data for ad groups and their ads.",
                            "items": {
                                "type": "object",
                                "additionalProperties": true,
                                "properties": {}
                            }
                        }
                    }
                }
            }
        }
    }
} 