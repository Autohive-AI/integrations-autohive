{
    "name": "adwords-tool",
    "version": "1.0.0",
    "description": "Fetches campaign data from Google AdWords API.",
    "entry_point": "adwords_module.py",
    "configuration_schema": {
        "type": "object",
        "properties": {
            "developer_token": {
                "type": "string",
                "format": "password",
                "label": "Google Ads Developer Token",
                "help_text": "Your Google Ads API Developer Token."
            },
            "login_customer_id": {
                "type": "string",
                "format": "text",
                "label": "Login Customer ID (for MCC)",
                "help_text": "Optional. Your MCC's customer ID (without hyphens) if accessing accounts via an MCC. Required if your OAuth credentials belong to the MCC."
            }
        },
        "required": [
            "developer_token"
        ]
    },
    "auth": {
        "type": "platform",
        "provider": "google-ads",
        "scopes": [
            "https://www.googleapis.com/auth/adwords"
        ]
    },
    "actions": {
        "get_campaign_data": {
            "description": "Retrieves Google Ads campaign data for specified customer ID and date ranges.",
            "input_schema": {
                "type": "object",
                "properties": {
                    "customer_id": {
                        "type": "string",
                        "label": "Customer ID",
                        "help_text": "Your Google Ads customer ID (e.g., '123-456-7890')."
                    },
                    "date_ranges": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "label": "Date Ranges",
                        "help_text": "List of date ranges. Supported formats: 'last_7_days', 'prev_7_days', or 'YYYY-MM-DD_YYYY-MM-DD' (e.g., [\"last_7_days\", \"2023-01-01_2023-01-31\"]). Defaults to [\"last_7_days\", \"prev_7_days\"]."
                    }
                },
                "required": [
                    "customer_id"
                ]
            },
            "output_schema": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "date_range": {"type": "string"},
                        "data": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": true,
                                "properties": {}
                            }
                        },
                        "error": {"type": ["string", "null"]}
                    }
                }
            }
        }
    },
    "polling_triggers": {}
} 