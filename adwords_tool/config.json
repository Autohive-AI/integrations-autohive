{
    "name": "adwords-tool",
    "version": "1.0.0",
    "description": "Fetches campaign data from Google AdWords API.",
    "entry_point": "adwords_module.py",
    "auth": {
        "identifier": "google_ads_yaml",
        "type": "yaml_file",
        "fields": {
            "type": "object",
            "properties": {
                "info": {
                    "type": "string",
                    "format": "text",
                    "label": "Authentication Info",
                    "help_text": "This integration requires a google-ads.yaml file in its root directory for authentication. Please refer to Google Ads API documentation for creating this file."
                }
            },
            "required": []
        },
        "usage_instructions": "Place a valid google-ads.yaml file in the root directory of this integration (integrations-autohive/adwords_tool/)."
    },
    "actions": {
        "get_campaign_data": {
            "description": "Retrieves Google Ads campaign data for specified customer ID and date ranges.",
            "input_schema": {
                "type": "object",
                "properties": {
                    "customer_id": {
                        "type": "string",
                        "label": "Customer ID",
                        "help_text": "Your Google Ads customer ID (e.g., '123-456-7890')."
                    },
                    "date_ranges": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "label": "Date Ranges",
                        "help_text": "List of date ranges. Supported formats: 'last_7_days', 'prev_7_days', or 'YYYY-MM-DD_YYYY-MM-DD' (e.g., [\"last_7_days\", \"2023-01-01_2023-01-31\"]). Defaults to [\"last_7_days\", \"prev_7_days\"]."
                    }
                },
                "required": [
                    "customer_id"
                ]
            },
            "output_schema": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "date_range": {"type": "string"},
                        "data": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": true,
                                "properties": {}
                            }
                        },
                        "error": {"type": ["string", "null"]}
                    }
                }
            }
        }
    },
    "polling_triggers": {}
} 