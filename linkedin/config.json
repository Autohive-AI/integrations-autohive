{
  "name": "LinkedIn",
  "version": "1.0.0",
  "description": "Share content and access basic profile information on LinkedIn.",
  "entry_point": "linkedin.py",
  "auth": {
    "type": "platform",
    "provider": "linkedin",
    "scopes": [
      "w_member_social",
      "openid",
      "profile",
      "email"
    ]
  },
  "actions": {
    "share_content": {
      "display_name": "Share Content",
      "description": "Share a text post on LinkedIn as the authenticated user. Uses the LinkedIn Posts API.",
      "input_schema": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "The text content/commentary to share in the post."
          },
          "visibility": {
            "type": "string",
            "enum": ["PUBLIC", "CONNECTIONS"],
            "description": "Post visibility. PUBLIC makes it visible to everyone, CONNECTIONS limits to your connections. Defaults to PUBLIC.",
            "default": "PUBLIC"
          },
          "author_id": {
            "type": "string",
            "description": "The LinkedIn user ID (sub) for the person posting. If not provided, uses the authenticated user."
          }
        },
        "required": [
          "content"
        ]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the sharing action."
          },
          "post_id": {
            "type": ["string", "null"],
            "description": "The URN of the created post (e.g., urn:li:share:123456)."
          },
          "post_data": {
            "type": ["object", "null"],
            "description": "The full post data returned by LinkedIn API.",
            "properties": {
              "id": {
                "type": "string",
                "description": "Post URN identifier."
              },
              "author": {
                "type": "string",
                "description": "Author URN (urn:li:person:{id})."
              },
              "lifecycleState": {
                "type": "string",
                "description": "Post state (PUBLISHED)."
              },
              "visibility": {
                "type": "string",
                "description": "Post visibility setting."
              },
              "commentary": {
                "type": "string",
                "description": "The post text content."
              },
              "createdAt": {
                "type": "integer",
                "description": "Creation timestamp in milliseconds since epoch."
              },
              "publishedAt": {
                "type": "integer",
                "description": "Publication timestamp in milliseconds since epoch."
              }
            }
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": [
          "result"
        ]
      }
    },
    "get_user_info": {
      "display_name": "Get User Info",
      "description": "Retrieve profile information for the authenticated LinkedIn user using OpenID Connect.",
      "input_schema": {
        "type": "object",
        "properties": {},
        "required": []
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Status of the user info retrieval operation."
          },
          "user_info": {
            "type": ["object", "null"],
            "description": "User profile information following OpenID Connect standard claims.",
            "properties": {
              "sub": {
                "type": "string",
                "description": "Subject identifier - unique LinkedIn user ID."
              },
              "name": {
                "type": "string",
                "description": "Full name of the user."
              },
              "given_name": {
                "type": "string",
                "description": "First name of the user."
              },
              "family_name": {
                "type": "string",
                "description": "Last name of the user."
              },
              "picture": {
                "type": "string",
                "description": "URL of the user's profile picture."
              },
              "locale": {
                "type": "object",
                "description": "User's locale information.",
                "properties": {
                  "country": {
                    "type": "string",
                    "description": "Country code (e.g., US)."
                  },
                  "language": {
                    "type": "string",
                    "description": "Language code (e.g., en)."
                  }
                }
              },
              "email": {
                "type": "string",
                "description": "User's primary email address (if email scope granted)."
              },
              "email_verified": {
                "type": "boolean",
                "description": "Whether the email has been verified."
              }
            }
          }
        },
        "required": [
          "result"
        ]
      }
    }
  }
}