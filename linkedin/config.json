{
  "name": "LinkedIn",
  "version": "2.0.0",
  "description": "Comprehensive LinkedIn integration for content sharing, post management, comments, and reactions using API version 202601.",
  "entry_point": "linkedin.py",
  "auth": {
    "type": "platform",
    "provider": "linkedin",
    "scopes": [
      "w_member_social",
      "r_member_social",
      "openid",
      "profile",
      "email"
    ]
  },
  "actions": {
    "get_user_info": {
      "display_name": "Get User Info",
      "description": "Retrieve profile information for the authenticated LinkedIn user using OpenID Connect.",
      "input_schema": {
        "type": "object",
        "properties": {},
        "required": []
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Status of the user info retrieval operation."
          },
          "user_info": {
            "type": ["object", "null"],
            "description": "User profile information following OpenID Connect standard claims.",
            "properties": {
              "sub": {
                "type": "string",
                "description": "Subject identifier - unique LinkedIn user ID."
              },
              "name": {
                "type": "string",
                "description": "Full name of the user."
              },
              "given_name": {
                "type": "string",
                "description": "First name of the user."
              },
              "family_name": {
                "type": "string",
                "description": "Last name of the user."
              },
              "picture": {
                "type": "string",
                "description": "URL of the user's profile picture."
              },
              "locale": {
                "type": "object",
                "description": "User's locale information.",
                "properties": {
                  "country": {
                    "type": "string",
                    "description": "Country code (e.g., US)."
                  },
                  "language": {
                    "type": "string",
                    "description": "Language code (e.g., en)."
                  }
                }
              },
              "email": {
                "type": "string",
                "description": "User's primary email address (if email scope granted)."
              },
              "email_verified": {
                "type": "boolean",
                "description": "Whether the email has been verified."
              }
            }
          },
          "details": {
            "type": ["string", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "share_content": {
      "display_name": "Share Content",
      "description": "Share a text post on LinkedIn as the authenticated user. Uses the LinkedIn Posts API with version 202601.",
      "input_schema": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "The text content/commentary to share in the post."
          },
          "visibility": {
            "type": "string",
            "enum": ["PUBLIC", "CONNECTIONS"],
            "description": "Post visibility. PUBLIC makes it visible to everyone, CONNECTIONS limits to your connections. Defaults to PUBLIC.",
            "default": "PUBLIC"
          },
          "author_id": {
            "type": "string",
            "description": "The LinkedIn user ID (sub) for the person posting. If not provided, uses the authenticated user."
          },
          "disable_reshare": {
            "type": "boolean",
            "description": "If true, prevents others from resharing this post. Defaults to false.",
            "default": false
          }
        },
        "required": ["content"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the sharing action."
          },
          "post_id": {
            "type": ["string", "null"],
            "description": "The URN of the created post (e.g., urn:li:share:123456)."
          },
          "post_data": {
            "type": ["object", "null"],
            "description": "The full post data returned by LinkedIn API."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "share_article": {
      "display_name": "Share Article",
      "description": "Share an article post on LinkedIn with a URL, title, and description.",
      "input_schema": {
        "type": "object",
        "properties": {
          "article_url": {
            "type": "string",
            "description": "The URL of the article to share."
          },
          "article_title": {
            "type": "string",
            "description": "The title of the article."
          },
          "article_description": {
            "type": "string",
            "description": "A description of the article content.",
            "default": ""
          },
          "commentary": {
            "type": "string",
            "description": "Optional commentary to add with the article share.",
            "default": ""
          },
          "visibility": {
            "type": "string",
            "enum": ["PUBLIC", "CONNECTIONS"],
            "description": "Post visibility. Defaults to PUBLIC.",
            "default": "PUBLIC"
          },
          "author_id": {
            "type": "string",
            "description": "The LinkedIn user ID for the person posting. If not provided, uses the authenticated user."
          }
        },
        "required": ["article_url", "article_title"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the article sharing action."
          },
          "post_id": {
            "type": ["string", "null"],
            "description": "The URN of the created post."
          },
          "post_data": {
            "type": ["object", "null"],
            "description": "The full post data returned by LinkedIn API."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "reshare_post": {
      "display_name": "Reshare Post",
      "description": "Reshare an existing LinkedIn post with optional commentary.",
      "input_schema": {
        "type": "object",
        "properties": {
          "original_post_urn": {
            "type": "string",
            "description": "The URN of the post to reshare (e.g., urn:li:share:123456 or urn:li:ugcPost:123456)."
          },
          "commentary": {
            "type": "string",
            "description": "Optional commentary to add with the reshare.",
            "default": ""
          },
          "visibility": {
            "type": "string",
            "enum": ["PUBLIC", "CONNECTIONS"],
            "description": "Post visibility. Defaults to PUBLIC.",
            "default": "PUBLIC"
          },
          "author_id": {
            "type": "string",
            "description": "The LinkedIn user ID for the person resharing. If not provided, uses the authenticated user."
          }
        },
        "required": ["original_post_urn"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the reshare action."
          },
          "post_id": {
            "type": ["string", "null"],
            "description": "The URN of the created reshare post."
          },
          "post_data": {
            "type": ["object", "null"],
            "description": "The full post data returned by LinkedIn API."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "get_post": {
      "display_name": "Get Post",
      "description": "Retrieve a single LinkedIn post by its URN.",
      "input_schema": {
        "type": "object",
        "properties": {
          "post_urn": {
            "type": "string",
            "description": "The URN of the post to retrieve (e.g., urn:li:share:123456 or urn:li:ugcPost:123456)."
          }
        },
        "required": ["post_urn"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the get post action."
          },
          "post": {
            "type": ["object", "null"],
            "description": "The post data.",
            "properties": {
              "id": {
                "type": "string",
                "description": "Post URN identifier."
              },
              "author": {
                "type": "string",
                "description": "Author URN."
              },
              "commentary": {
                "type": "string",
                "description": "The post text content."
              },
              "visibility": {
                "type": "string",
                "description": "Post visibility setting."
              },
              "lifecycleState": {
                "type": "string",
                "description": "Post state (PUBLISHED, DRAFT, etc.)."
              },
              "createdAt": {
                "type": "integer",
                "description": "Creation timestamp in milliseconds."
              },
              "publishedAt": {
                "type": "integer",
                "description": "Publication timestamp in milliseconds."
              },
              "lastModifiedAt": {
                "type": "integer",
                "description": "Last modification timestamp in milliseconds."
              }
            }
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "get_posts": {
      "display_name": "Get Posts",
      "description": "Retrieve posts by an author. Returns a paginated list of posts.",
      "input_schema": {
        "type": "object",
        "properties": {
          "author_id": {
            "type": "string",
            "description": "The LinkedIn user ID of the author. If not provided, uses the authenticated user."
          },
          "count": {
            "type": "integer",
            "description": "Number of posts to retrieve (1-100). Defaults to 10.",
            "default": 10,
            "minimum": 1,
            "maximum": 100
          },
          "start": {
            "type": "integer",
            "description": "Pagination offset. Defaults to 0.",
            "default": 0
          },
          "sort_by": {
            "type": "string",
            "enum": ["LAST_MODIFIED", "CREATED"],
            "description": "Sort order for posts. Defaults to LAST_MODIFIED.",
            "default": "LAST_MODIFIED"
          }
        },
        "required": []
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the get posts action."
          },
          "posts": {
            "type": ["array", "null"],
            "description": "Array of post objects.",
            "items": {
              "type": "object"
            }
          },
          "paging": {
            "type": ["object", "null"],
            "description": "Pagination information.",
            "properties": {
              "start": {
                "type": "integer",
                "description": "Current offset."
              },
              "count": {
                "type": "integer",
                "description": "Number of items returned."
              }
            }
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "update_post": {
      "display_name": "Update Post",
      "description": "Update the commentary/text of an existing LinkedIn post.",
      "input_schema": {
        "type": "object",
        "properties": {
          "post_urn": {
            "type": "string",
            "description": "The URN of the post to update."
          },
          "commentary": {
            "type": "string",
            "description": "The new text content for the post."
          }
        },
        "required": ["post_urn", "commentary"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the update action."
          },
          "post_urn": {
            "type": "string",
            "description": "The URN of the updated post."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "delete_post": {
      "display_name": "Delete Post",
      "description": "Delete a LinkedIn post.",
      "input_schema": {
        "type": "object",
        "properties": {
          "post_urn": {
            "type": "string",
            "description": "The URN of the post to delete."
          }
        },
        "required": ["post_urn"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the delete action."
          },
          "post_urn": {
            "type": "string",
            "description": "The URN of the deleted post."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "get_comments": {
      "display_name": "Get Comments",
      "description": "Retrieve comments on a LinkedIn post.",
      "input_schema": {
        "type": "object",
        "properties": {
          "post_urn": {
            "type": "string",
            "description": "The URN of the post to get comments from (e.g., urn:li:activity:123456)."
          }
        },
        "required": ["post_urn"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the get comments action."
          },
          "comments": {
            "type": ["array", "null"],
            "description": "Array of comment objects.",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Comment ID."
                },
                "actor": {
                  "type": "string",
                  "description": "URN of the comment author."
                },
                "message": {
                  "type": "object",
                  "description": "Comment message content.",
                  "properties": {
                    "text": {
                      "type": "string",
                      "description": "Comment text."
                    }
                  }
                },
                "created": {
                  "type": "object",
                  "description": "Creation metadata."
                }
              }
            }
          },
          "paging": {
            "type": ["object", "null"],
            "description": "Pagination information."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "create_comment": {
      "display_name": "Create Comment",
      "description": "Add a comment to a LinkedIn post.",
      "input_schema": {
        "type": "object",
        "properties": {
          "post_urn": {
            "type": "string",
            "description": "The URN of the post to comment on (e.g., urn:li:activity:123456)."
          },
          "message": {
            "type": "string",
            "description": "The comment text."
          },
          "author_id": {
            "type": "string",
            "description": "The LinkedIn user ID for the commenter. If not provided, uses the authenticated user."
          }
        },
        "required": ["post_urn", "message"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the create comment action."
          },
          "comment_id": {
            "type": ["string", "null"],
            "description": "The ID of the created comment."
          },
          "comment": {
            "type": ["object", "null"],
            "description": "The full comment data returned by LinkedIn API."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "delete_comment": {
      "display_name": "Delete Comment",
      "description": "Delete a comment from a LinkedIn post.",
      "input_schema": {
        "type": "object",
        "properties": {
          "post_urn": {
            "type": "string",
            "description": "The URN of the post containing the comment."
          },
          "comment_id": {
            "type": "string",
            "description": "The ID of the comment to delete."
          },
          "author_id": {
            "type": "string",
            "description": "The LinkedIn user ID of the comment author. If not provided, uses the authenticated user."
          }
        },
        "required": ["post_urn", "comment_id"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the delete comment action."
          },
          "comment_id": {
            "type": "string",
            "description": "The ID of the deleted comment."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "get_reactions": {
      "display_name": "Get Reactions",
      "description": "Retrieve reactions on a LinkedIn post.",
      "input_schema": {
        "type": "object",
        "properties": {
          "post_urn": {
            "type": "string",
            "description": "The URN of the post to get reactions from."
          },
          "sort": {
            "type": "string",
            "enum": ["CHRONOLOGICAL", "REVERSE_CHRONOLOGICAL", "RELEVANCE"],
            "description": "Sort order for reactions. Defaults to REVERSE_CHRONOLOGICAL.",
            "default": "REVERSE_CHRONOLOGICAL"
          }
        },
        "required": ["post_urn"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the get reactions action."
          },
          "reactions": {
            "type": ["array", "null"],
            "description": "Array of reaction objects.",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Reaction URN."
                },
                "reactionType": {
                  "type": "string",
                  "description": "Type of reaction (LIKE, PRAISE, EMPATHY, INTEREST, APPRECIATION, ENTERTAINMENT)."
                },
                "created": {
                  "type": "object",
                  "description": "Creation metadata."
                }
              }
            }
          },
          "paging": {
            "type": ["object", "null"],
            "description": "Pagination information."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "create_reaction": {
      "display_name": "Create Reaction",
      "description": "Add a reaction to a LinkedIn post or comment.",
      "input_schema": {
        "type": "object",
        "properties": {
          "target_urn": {
            "type": "string",
            "description": "The URN of the post or comment to react to (e.g., urn:li:activity:123456)."
          },
          "reaction_type": {
            "type": "string",
            "enum": ["LIKE", "PRAISE", "EMPATHY", "INTEREST", "APPRECIATION", "ENTERTAINMENT"],
            "description": "The type of reaction. LIKE=Like, PRAISE=Celebrate, EMPATHY=Love, INTEREST=Insightful, APPRECIATION=Support, ENTERTAINMENT=Funny. Defaults to LIKE.",
            "default": "LIKE"
          },
          "author_id": {
            "type": "string",
            "description": "The LinkedIn user ID for the reactor. If not provided, uses the authenticated user."
          }
        },
        "required": ["target_urn"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the create reaction action."
          },
          "reaction": {
            "type": ["object", "null"],
            "description": "The reaction data returned by LinkedIn API."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    },
    "delete_reaction": {
      "display_name": "Delete Reaction",
      "description": "Remove a reaction from a LinkedIn post or comment.",
      "input_schema": {
        "type": "object",
        "properties": {
          "target_urn": {
            "type": "string",
            "description": "The URN of the post or comment to remove reaction from."
          },
          "author_id": {
            "type": "string",
            "description": "The LinkedIn user ID of the reactor. If not provided, uses the authenticated user."
          }
        },
        "required": ["target_urn"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Result of the delete reaction action."
          },
          "target_urn": {
            "type": "string",
            "description": "The URN of the target."
          },
          "details": {
            "type": ["string", "object", "null"],
            "description": "Error details if the operation failed."
          }
        },
        "required": ["result"]
      }
    }
  }
}
