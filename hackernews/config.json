    "get_story_with_comments": {
      "display_name": "Get Story with Comments",
      "description": "Fetches a single story with its top comments. Returns the story details along with a threaded comment tree. Useful for understanding the community discussion around a specific story.",
      "input_schema": {
        "type": "object",
        "properties": {
          "story_id": {
            "type": "integer",
            "description": "The Hacker News story ID to fetch"
          },
          "comment_limit": {
            "type": "integer",
            "description": "Maximum number of top-level comments to fetch (1-50). Default is 20.",
            "default": 20,
            "minimum": 1,
            "maximum": 50
          },
          "comment_depth": {
            "type": "integer",
            "description": "How many levels deep to fetch replies (1-5). Default is 2.",
            "default": 2,
            "minimum": 1,
            "maximum": 5
          }
        },
        "required": ["story_id"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "story": {
            "type": "object",
            "description": "The story details",
            "properties": {
              "id": { "type": "integer" },
              "title": { "type": "string" },
              "url": { "type": "string" },
              "text": { "type": "string" },
              "hn_url": { "type": "string" },
              "score": { "type": "integer" },
              "by": { "type": "string" },
              "time": { "type": "string" },
              "descendants": { "type": "integer" },
              "type": { "type": "string" }
            }
          },
          "comments": {
            "type": "array",
            "description": "Top-level comments with nested replies",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "integer" },
                "by": { "type": "string" },
                "text": { "type": "string" },
                "time": { "type": "string" },
                "replies": { "type": "array", "description": "Nested replies" }
              }
            }
          },
          "fetched_at": {
            "type": "string",
            "description": "ISO timestamp when data was fetched"
          }
        }
      }
    },
    "get_user_profile": {
      "display_name": "Get User Profile",
      "description": "Fetches a Hacker News user's public profile including karma, account age, and about text.",
      "input_schema": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "The Hacker News username (case-sensitive)"
          }
        },
        "required": ["username"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "description": "Username" },
          "karma": { "type": "integer", "description": "User's karma score" },
          "created": {
            "type": "string",
            "description": "Account creation date (ISO timestamp)"
          },
          "about": {
            "type": "string",
            "description": "User's self-description (HTML)"
          },
          "profile_url": {
            "type": "string",
            "description": "Link to user's HN profile"
          }
        }
      }
    }
