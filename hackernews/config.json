    "get_job_stories": {
      "display_name": "Get Job Stories",
      "description": "Fetches job postings from Hacker News. These are typically from YC companies and tech startups.",
      "input_schema": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum number of job postings to return (1-100). Default is 30.",
            "default": 30,
            "minimum": 1,
            "maximum": 100
          }
        },
        "required": []
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "jobs": {
            "type": "array",
            "description": "List of job postings",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "integer", "description": "Unique job ID" },
