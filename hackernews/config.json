{
  "name": "Hacker News",
  "version": "1.0.0",
  "description": "Read-only integration with Hacker News API for fetching top stories, news, and discussions.",
  "entry_point": "hackernews.py",
  "actions": {
    "get_top_stories": {
      "display_name": "Get Top Stories",
      "description": "Fetches the current top stories from Hacker News with full details including title, URL, score, author, and comment count. Returns stories sorted by ranking. Ideal for creating daily tech news digests.",
      "input_schema": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Maximum number of stories to return (1-100). Default is 30.",
            "default": 30,
            "minimum": 1,
            "maximum": 100
          }
        },
        "required": []
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "stories": {
            "type": "array",
            "description": "List of top stories with full details",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "integer", "description": "Unique story ID" },
                "title": { "type": "string", "description": "Story title" },
                "url": {
                  "type": "string",
                  "description": "External URL of the story (if any)"
                },
                "hn_url": {
                  "type": "string",
                  "description": "Hacker News discussion URL"
                },
                "score": {
                  "type": "integer",
                  "description": "Story score/points"
                },
                "by": { "type": "string", "description": "Author username" },
                "time": {
                  "type": "string",
                  "description": "ISO timestamp of submission"
                },
                "descendants": {
                  "type": "integer",
                  "description": "Total comment count"
                },
                "type": {
                  "type": "string",
                  "description": "Item type (story, job, etc.)"
                }
              }
            }
          },
          "fetched_at": {
            "type": "string",
            "description": "ISO timestamp when data was fetched"
          },
          "count": {
            "type": "integer",
            "description": "Number of stories returned"
          }
        }
      }
    },
    "get_best_stories": {
      "display_name": "Get Best Stories",
      "description": "Fetches the best stories from Hacker News (highest voted over time). These are stories that have performed exceptionally well. Good for finding evergreen high-quality content.",
