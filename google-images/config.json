{
  "name": "Google Images",
  "version": "0.0.1",
  "description": "Access images from google images using SerpAPI",
  "entry_point": "google_images.py",
  "auth": {
    "type": "custom",
    "title": "SerpApi Configuration",
    "fields": {
      "type": "object",
      "properties": {
        "api_key": {
          "type": "string",
          "format": "password",
          "label": "SerpApi Key",
          "help_text": "Your Private API Key from SerpApi."
        }
      }
    }
  },
  "actions": {
    "google_images_search": {
      "display_name": "Search Google Images",
      "description": "Search query string. Supports advanced operators like inurl:, site:, intitle:",
      "input_schema": {
        "type": "object",
        "properties": {
          "q": {
            "type": "string",
            "description": "Search query"
          },
          "num": {
            "type": "integer",
            "description": "Number of results",
            "minimum": 1,
            "maximum": 100,
            "default": 10
          },
          "location": {
            "type": "string",
            "description": "Geographic location for search (city level recommended, e.g., 'Austin, Texas, United States')"
          },
          "gl": {
            "type": "string",
            "description": "Country code for search results (e.g., 'us', 'uk', 'fr')"
          },
          "hl": {
            "type": "string",
            "description": "Language code for search results (e.g., 'en', 'fr', 'de')"
          },
          "tbs": {
            "type": "string",
            "description": "Advanced search filters. Image filters: isz:l (large), ic:color (color), itp:photo (photo), qdr:w (week). Combine with commas."
          },
          "filter": {
            "type": "integer",
            "description": "Enable/disable 'Similar Results' and 'Omitted Results' filters",
            "enum": [0, 1],
            "default": 1
          }
        },
        "required": [
          "q"
        ]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "images": {
            "type": "array"
          },
          "total_results": {
            "type": "integer"
          }
        }
      }
    },
    "download_image": {
      "display_name": "Download Image",
      "description": "Download an image from a URL and return it as a file object with base64 content",
      "input_schema": {
        "type": "object",
        "properties": {
          "image_url": {
            "type": "string",
            "description": "URL of the image to download"
          }
        },
        "required": ["image_url"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "file": {
            "type": "object",
            "properties": {
              "content": {
                "type": "string",
                "description": "Base64-encoded image data"
              },
              "name": {
                "type": "string",
                "description": "Filename"
              },
              "contentType": {
                "type": "string",
                "description": "MIME type (e.g., image/jpeg)"
              },
              "size": {
                "type": "integer",
                "description": "File size in bytes"
              }
            }
          }
        }
      }
    }
  }
}