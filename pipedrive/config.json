            "input_schema": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Deal title"
                    },
                    "value": {
                        "type": "number",
                        "description": "Deal value"
                    },
                    "currency": {
                        "type": "string",
                        "description": "Currency code (e.g., 'USD', 'EUR')"
                    },
                    "person_id": {
                        "type": "integer",
                        "description": "ID of the person associated with the deal"
                    },
                    "org_id": {
                        "type": "integer",
                        "description": "ID of the organization associated with the deal"
                    },
                    "pipeline_id": {
                        "type": "integer",
                        "description": "ID of the pipeline"
                    },
                    "stage_id": {
                        "type": "integer",
                        "description": "ID of the stage in the pipeline"
                    },
                    "status": {
                        "type": "string",
                        "description": "Deal status (open, won, lost, deleted)",
                        "enum": ["open", "won", "lost", "deleted"]
                    },
                    "expected_close_date": {
                        "type": "string",
                        "description": "Expected close date (YYYY-MM-DD)"
                    },
                    "user_id": {
                        "type": "integer",
                        "description": "ID of the user who will be the owner of the deal"
                    }
                },
                "required": ["title"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "deal": {
                        "type": "object",
                        "description": "Created deal details"
                    },
                    "result": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if the action failed"
                    }
                },
                "required": ["deal", "result"]
            }
        },
