{
    "name": "Google Calendar",
    "display_name": "Google Calendar",
    "version": "0.1.0",
    "description": "Google Calendar integration for managing calendars, events, and more.",
    "entry_point": "google_calendar.py",
    "auth": {
        "type": "platform",
        "provider": "Google Calendar",
        "scopes": ["https://www.googleapis.com/auth/calendar"]
    },
    "actions": {
        "list_calendars": {
            "display_name": "List Calendars",
            "description": "List all Google calendars accessible to the user",
            "input_schema": {
                "type": "object",
                "properties": {},
                "required": []
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "calendars": {
                        "type": "array",
                        "description": "List of calendars",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "description": "Calendar ID"
                                },
                                "summary": {
                                    "type": "string",
                                    "description": "Calendar name/title"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Calendar description"
                                },
                                "primary": {
                                    "type": "boolean",
                                    "description": "Whether this is the user's primary calendar"
                                },
                                "accessRole": {
                                    "type": "string",
                                    "description": "The user's access role for this calendar"
                                }
                            },
                            "required": ["id", "summary"]
                        }
                    },
                    "result": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if the action failed"
                    }
                },
                "required": ["calendars", "result"]
            }
        },
        "list_events": {
            "display_name": "List Events",
            "description": "List events from a Google Calendar. Results are paginated.",
            "input_schema": {
                "type": "object",
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "description": "Google Calendar ID to list events from. Use 'primary' for the user's primary Google Calendar."
                    },
                    "time_min": {
                        "type": "string",
                        "description": "Lower bound (exclusive) for an event's end time to filter by (RFC3339 timestamp)"
                    },
                    "time_max": {
                        "type": "string",
                        "description": "Upper bound (exclusive) for an event's start time to filter by (RFC3339 timestamp)"
                    },
                    "max_results": {
                        "type": "integer",
                        "description": "Maximum number of events to return (1-2500, default 250)"
                    },
                    "page_token": {
                        "type": "string",
                        "description": "Token specifying which result page to return"
                    }
                },
                "required": ["calendar_id"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "events": {
                        "type": "array",
                        "description": "List of calendar events",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "description": "Event ID"
                                },
                                "summary": {
                                    "type": "string",
                                    "description": "Event title"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Event description"
                                },
                                "start": {
                                    "type": "object",
                                    "description": "Event start time",
                                    "properties": {
                                        "dateTime": {
                                            "type": "string",
                                            "description": "Start date-time (RFC3339)"
                                        },
                                        "date": {
                                            "type": "string",
                                            "description": "Start date for all-day events"
                                        }
                                    }
                                },
                                "end": {
                                    "type": "object",
                                    "description": "Event end time",
                                    "properties": {
                                        "dateTime": {
                                            "type": "string",
                                            "description": "End date-time (RFC3339)"
                                        },
                                        "date": {
                                            "type": "string",
                                            "description": "End date for all-day events"
                                        }
                                    }
                                },
                                "location": {
                                    "type": "string",
                                    "description": "Event location"
                                },
                                "attendees": {
                                    "type": "array",
                                    "description": "Event attendees",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "email": {
                                                "type": "string",
                                                "description": "Attendee email"
                                            },
                                            "displayName": {
                                                "type": "string",
                                                "description": "Attendee display name"
                                            },
                                            "responseStatus": {
                                                "type": "string",
                                                "description": "Attendee response status"
                                            }
                                        }
                                    }
                                }
                            },
                            "required": ["id", "summary"]
                        }
                    },
                    "nextPageToken": {
                        "type": "string",
                        "description": "Token for the next page of results"
                    },
                    "result": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if the action failed"
                    }
                },
                "required": ["events", "result"]
            }
        },
        "get_event": {
            "display_name": "Get Event",
            "description": "Get details of a specific Google Calendar event",
            "input_schema": {
                "type": "object",
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "description": "Calendar ID containing the event. Use 'primary' for the user's primary calendar."
                    },
                    "event_id": {
                        "type": "string",
                        "description": "Event ID to retrieve"
                    }
                },
                "required": ["calendar_id", "event_id"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "event": {
                        "type": "object",
                        "description": "Calendar event details",
                        "properties": {
                            "id": {
                                "type": "string",
                                "description": "Event ID"
                            },
                            "summary": {
                                "type": "string",
                                "description": "Event title"
                            },
                            "description": {
                                "type": "string",
                                "description": "Event description"
                            },
                            "start": {
                                "type": "object",
                                "description": "Event start time",
                                "properties": {
                                    "dateTime": {
                                        "type": "string",
                                        "description": "Start date-time (RFC3339)"
                                    },
                                    "date": {
                                        "type": "string",
                                        "description": "Start date for all-day events"
                                    }
                                }
                            },
                            "end": {
                                "type": "object",
                                "description": "Event end time",
                                "properties": {
                                    "dateTime": {
                                        "type": "string",
                                        "description": "End date-time (RFC3339)"
                                    },
                                    "date": {
                                        "type": "string",
                                        "description": "End date for all-day events"
                                    }
                                }
                            },
                            "location": {
                                "type": "string",
                                "description": "Event location"
                            },
                            "attendees": {
                                "type": "array",
                                "description": "Event attendees",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "email": {
                                            "type": "string",
                                            "description": "Attendee email"
                                        },
                                        "displayName": {
                                            "type": "string",
                                            "description": "Attendee display name"
                                        },
                                        "responseStatus": {
                                            "type": "string",
                                            "description": "Attendee response status"
                                        }
                                    }
                                }
                            },
                            "created": {
                                "type": "string",
                                "description": "Event creation time"
                            },
                            "updated": {
                                "type": "string",
                                "description": "Event last modification time"
                            }
                        },
                        "required": ["id", "summary"]
                    },
                    "result": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if the action failed"
                    }
                },
                "required": ["event", "result"]
            }
        },
        "create_event": {
            "display_name": "Create Event",
            "description": "Create a new Google Calendar event",
            "input_schema": {
                "type": "object",
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "description": "Calendar ID to create the event in. Use 'primary' for the user's primary calendar."
                    },
                    "summary": {
                        "type": "string",
                        "description": "Event title"
                    },
                    "description": {
                        "type": "string",
                        "description": "Event description"
                    },
                    "start_datetime": {
                        "type": "string",
                        "description": "Event start date-time (RFC3339 format, e.g., '2023-12-25T10:00:00-08:00')"
                    },
                    "end_datetime": {
                        "type": "string",
                        "description": "Event end date-time (RFC3339 format, e.g., '2023-12-25T11:00:00-08:00')"
                    },
                    "start_date": {
                        "type": "string",
                        "description": "Event start date for all-day events (YYYY-MM-DD format)"
                    },
                    "end_date": {
                        "type": "string",
                        "description": "Event end date for all-day events (YYYY-MM-DD format)"
                    },
                    "location": {
                        "type": "string",
                        "description": "Event location"
                    },
                    "attendees": {
                        "type": "array",
                        "description": "Event attendees",
                        "items": {
                            "type": "string",
                            "description": "Attendee email address"
                        }
                    }
                },
                "required": ["calendar_id", "summary"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "event": {
                        "type": "object",
                        "description": "Created event details",
                        "properties": {
                            "id": {
                                "type": "string",
                                "description": "Event ID"
                            },
                            "summary": {
                                "type": "string",
                                "description": "Event title"
                            },
                            "htmlLink": {
                                "type": "string",
                                "description": "Link to the event in Google Calendar"
                            }
                        },
                        "required": ["id", "summary"]
                    },
                    "result": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if the action failed"
                    }
                },
                "required": ["event", "result"]
            }
        },
        "update_event": {
            "display_name": "Update Event",
            "description": "Update an existing Google Calendar event",
            "input_schema": {
                "type": "object",
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "description": "Calendar ID containing the event. Use 'primary' for the user's primary calendar."
                    },
                    "event_id": {
                        "type": "string",
                        "description": "Event ID to update"
                    },
                    "summary": {
                        "type": "string",
                        "description": "Event title"
                    },
                    "description": {
                        "type": "string",
                        "description": "Event description"
                    },
                    "start_datetime": {
                        "type": "string",
                        "description": "Event start date-time (RFC3339 format)"
                    },
                    "end_datetime": {
                        "type": "string",
                        "description": "Event end date-time (RFC3339 format)"
                    },
                    "start_date": {
                        "type": "string",
                        "description": "Event start date for all-day events (YYYY-MM-DD format)"
                    },
                    "end_date": {
                        "type": "string",
                        "description": "Event end date for all-day events (YYYY-MM-DD format)"
                    },
                    "location": {
                        "type": "string",
                        "description": "Event location"
                    },
                    "attendees": {
                        "type": "array",
                        "description": "Event attendees",
                        "items": {
                            "type": "string",
                            "description": "Attendee email address"
                        }
                    }
                },
                "required": ["calendar_id", "event_id"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "event": {
                        "type": "object",
                        "description": "Updated event details",
                        "properties": {
                            "id": {
                                "type": "string",
                                "description": "Event ID"
                            },
                            "summary": {
                                "type": "string",
                                "description": "Event title"
                            },
                            "updated": {
                                "type": "string",
                                "description": "Event last modification time"
                            }
                        },
                        "required": ["id", "summary"]
                    },
                    "result": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if the action failed"
                    }
                },
                "required": ["event", "result"]
            }
        },
        "delete_event": {
            "display_name": "Delete Event",
            "description": "Delete a Google Calendar event",
            "input_schema": {
                "type": "object",
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "description": "Calendar ID containing the event. Use 'primary' for the user's primary calendar."
                    },
                    "event_id": {
                        "type": "string",
                        "description": "Event ID to delete"
                    }
                },
                "required": ["calendar_id", "event_id"]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "result": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if the action failed"
                    }
                },
                "required": ["result"]
            }
        }
    }
}